<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

        <context:annotation-config />

        <!-- create bean for actor class with id as ram-->
        <bean id="ram" class="com.stackroute.domain.Actor">
                <constructor-arg name="name" value="ram" index="0" type="java.lang.String"/>
                <constructor-arg name="age" value="25" index="2" type="int"/>
                <constructor-arg name="gender" value="male" index="1" type="java.lang.String"/>
        </bean>

        <!-- create bean for actor class with id as ravi-->
        <bean id="ravi" class="com.stackroute.domain.Actor">
                <constructor-arg name="name" value="ravi" index="0" type="java.lang.String"/>
                <constructor-arg name="age" value="25" index="2" type="int"/>
                <constructor-arg name="gender" value="male" index="1" type="java.lang.String"/>
        </bean>

        <!-- create bean for actor class with id as vijay-->
        <bean id="vijay" class="com.stackroute.domain.Actor">
                <constructor-arg name="name" value="vijay" index="0" type="java.lang.String"/>
                <constructor-arg name="age" value="25" index="2" type="int"/>
                <constructor-arg name="gender" value="male" index="1" type="java.lang.String"/>
        </bean>
        <!-- create bean for movie class with name -->
        <bean name="rammovie,rammovie1" class="com.stackroute.domain.Movie" scope="prototype">
                <constructor-arg name="actor" ref="ram"/>
        </bean>

        <bean name="ravimovie,ravimovie1" class="com.stackroute.domain.Movie">
                <constructor-arg name="actor" ref="ravi" />
        </bean>


        <bean id="vijaymovie" class="com.stackroute.domain.Movie">

                <constructor-arg name="actor" ref="vijay"/>

        </bean>
</beans>